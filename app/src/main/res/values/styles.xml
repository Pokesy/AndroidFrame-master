<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@mipmap/ic_launcher</item>
        <item name="android:minHeight">@dimen/margin_medium</item>
    </style>
    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Widgets -->
    <style name="Widget.App.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <!-- TODO 去掉 android:layout_height 和 android:layout_width -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="main_wd">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:background">@drawable/transparent</item>-->
        <!--<item name="android:paddingTop">10dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Widget.App.TextView.Large.Primary">
        <item name="android:textColor">@color/font_color_primary</item>
    </style>
    <!-- 大字体 -->
    <style name="Widget.App.TextView.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>
    <style name="Widget.App.TextView.Color">
        <item name="android:textColor">@drawable/home_text_color_selector</item>
    </style>
    <style name="Widget.App.TextView.Large.White">
        <item name="android:textColor">@color/font_color_white</item>
    </style>

    <style name="ProfileMenuContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@android:color/background_light</item>
    </style>
    <style name="Widget.App.TextView.Large.Primary.ProfileMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

