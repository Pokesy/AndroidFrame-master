<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/margin_tag"
    android:background="@color/font_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gv_logo_iv"
        android:layout_width="177dp"
        android:layout_height="118dp" />
    <View
        android:layout_width="match_parent"
        android:background="@color/color_line"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/gv_name_tv"
        android:layout_width="177dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textColor="@color/color_xxl"
        android:textSize="@dimen/font_size_medium" />
    <LinearLayout
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_bar1"
            android:text="￥152698"
            android:textSize="@dimen/font_size_medium" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="已售283823"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a0"
            android:textSize="@dimen/font_size_small" />

    </LinearLayout>

</LinearLayout>
