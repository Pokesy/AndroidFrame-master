<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_color_white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/layout_managerAddress_peopleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="收货人：章撒里"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layout_managerAddress_peoplePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="15639874935"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_organ"
                android:textSize="@dimen/d13sp"
                android:text="[默认地址]"/>-->

            <TextView
                android:id="@+id/layout_managerAddress_peopleAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="@string/content_title"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d13sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_xl_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/font_color_white">

        <TextView
            android:id="@+id/layout_managerAddress_defaultAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/select_address"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:text="默认地址"
            android:textColor="@drawable/select_address_text"
            android:textSize="@dimen/d14sp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/layout_managerAddress_compile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/compile"
                android:gravity="center_vertical"
                android:text="编辑"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d14sp" />

            <TextView
                android:id="@+id/layout_managerAddress_trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/trash"
                android:gravity="center_vertical"
                android:text="删除"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d14sp" />

        </LinearLayout>

    </RelativeLayout>


    <include layout="@layout/xl_line" />

</LinearLayout>