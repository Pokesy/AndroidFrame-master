<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.loonggg.androidframedemo.ui.activity.AddAddressActivity">

    <RelativeLayout
        android:id="@+id/activity_addAddress_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/color_top">

        <ImageView
            android:id="@+id/activity_addAddress_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d15sp"
            android:textColor="@color/color_xxl"
            android:text="提交订单"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/activity_addAddress_back"/>

        <TextView
            android:id="@+id/activity_addAddress_save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@color/color_read"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/d14sp"
            android:text="保存"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/font_color_white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_xxl"
            android:textSize="@dimen/d14sp"
            android:text="收货人"/>
        <EditText
            android:id="@+id/activity_addAddress_peopleName"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="@color/color_xxl"
            android:textSize="@dimen/d14sp"
            android:background="@drawable/edittext_shape"
            android:singleLine="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/font_color_white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_xxl"
            android:textSize="@dimen/d14sp"
            android:text="联系电话"/>
        <EditText
            android:id="@+id/activity_addAddress_peoplePhone"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="@color/color_xxl"
            android:textSize="@dimen/d14sp"
            android:background="@drawable/edittext_shape"
            android:singleLine="true"
            android:text="123456"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/font_color_white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_xxl"
            android:textSize="@dimen/d14sp"
            android:text="所在地区"/>
        <TextView
            android:id="@+id/activity_addAddress_peopleAddress"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:text="请选择"
            android:textColor="@color/color_gray"
            android:drawableRight="@mipmap/goback"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/activity_addAddress_detailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="详细地址"
        android:textSize="@dimen/d14sp"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"/>

    <include layout="@layout/xl_line"/>

    <TextView
        android:id="@+id/activity_addAddress_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/font_color_white"
        android:textSize="@dimen/d14sp"
        android:textColor="@color/color_xxl"
        android:text="设置为默认地址"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/select_address"/>
</LinearLayout>
