<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white">

    <com.loonggg.androidframedemo.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/water_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:src="@mipmap/fh" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"

                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/seatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15"
                            android:src="@mipmap/fx" />

                        <ImageView
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15"
                            android:src="@mipmap/sc" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/cd" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:gravity="center"
                    android:paddingEnd="@dimen/margin_small"
                    android:paddingStart="@dimen/margin_small">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/ll_content"
                        android:src="@mipmap/home_dgnsj" />


                    <LinearLayout
                        android:id="@+id/ll_content"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_toEndOf="@+id/iv_head"
                        android:layout_toStartOf="@+id/ll_tv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="@string/app_near_title"
                            android:textColor="@color/font_color_white"
                            android:textSize="@dimen/font_size_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/app_near_content"
                            android:textColor="@color/font_color_white"
                            android:textSize="@dimen/font_size_large" />

                        <ImageView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@mipmap/fwzbq" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/ll_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"

                            android:layout_marginStart="@dimen/margin_small"
                            android:gravity="center"
                            android:text="14823"
                            android:textColor="@color/font_color_white"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginStart="@dimen/margin_small"
                            android:gravity="center"
                            android:text="@string/collect"
                            android:textColor="@color/font_color_white"
                            android:textSize="@dimen/font_size_small" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_radio"
                android:layout_width="fill_parent"
                android:layout_height="68dp"
                android:background="@color/font_color_white"
                android:gravity="center"
                android:orientation="horizontal"

                android:paddingEnd="38dp"
                android:paddingStart="38dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/app_water_people"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/app_water_car"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/app_water_time"
                        android:textColor="@color/color_l"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/xl_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/font_color_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingEnd="@dimen/margin_small"
                    android:paddingStart="@dimen/margin_small">

                    <ImageView
                        android:id="@+id/head1"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/content2"
                        android:src="@mipmap/az" />


                    <LinearLayout
                        android:id="@+id/content2"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_toEndOf="@+id/head1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/app_tool_make"
                            android:textColor="@color/color_water_tool"
                            android:textSize="@dimen/font_size_medium" />

                        <TextView
                            android:id="@+id/content11"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/app_tool_text"
                            android:textSize="@dimen/font_size_smallest" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingEnd="@dimen/margin_small"
                    android:paddingStart="@dimen/margin_small">

                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/content"
                        android:src="@mipmap/sjwx" />


                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_toEndOf="@+id/head"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/app_tool_service"
                            android:textColor="@color/color_water_service"
                            android:textSize="@dimen/font_size_medium" />

                        <TextView
                            android:id="@+id/content1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/app_tool_service_text"
                            android:textSize="@dimen/font_size_smallest" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/xl_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tools_water"
                    android:paddingBottom="@dimen/margin_tag"
                    android:paddingEnd="@dimen/margin_15"
                    android:paddingTop="@dimen/margin_tag"
                    android:text="@string/app_hot_brand"
                    android:textColor="@color/font_color_white"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <com.loonggg.androidframedemo.view.ScrollGridView
                android:id="@+id/zhd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@color/font_color_white"
                android:numColumns="1"
                android:verticalSpacing="@dimen/margin_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="@string/app_water_more_brand"
                    android:textColor="@color/color_xxl"
                    android:textSize="@dimen/font_size_medium" />
            </RelativeLayout>
        </LinearLayout>

    </com.loonggg.androidframedemo.view.MyScrollview>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/sell_wz"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_2"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/wxlx"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_3"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/sell_dh"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>