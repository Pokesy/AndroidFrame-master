<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="265dp"
    android:layout_height="120dp"
    android:background="@drawable/dialog_shape">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center"
        android:textSize="@dimen/d14sp"
        android:textColor="@color/color_xxl"
        android:text="确定要删除改地址吗？"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_xl_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_addressDialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_gray"
            android:text="取消"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_xl_line"/>

        <TextView
            android:id="@+id/layout_addressDialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_read"
            android:text="确定"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>