<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/font_color_white"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/layout_selectArea_areaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/d14sp"
        android:textColor="@color/color_xxl"
        android:text="地区的名字"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/layout_selectArea_backItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/right_row_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>