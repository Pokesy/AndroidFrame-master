<?xml version="1.0" encoding="utf-8"?>
<com.loonggg.androidframedemo.view.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:gravity="center"
            android:paddingEnd="@dimen/margin_small"
            android:paddingStart="@dimen/margin_small">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ll_content"
                android:src="@mipmap/home_dgnsj" />


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@+id/iv_head"
                android:layout_toStartOf="@+id/ll_tv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@string/app_near_title"
                    android:textColor="@color/color_xxl"
                    android:textSize="@dimen/font_size_large"
             />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/app_near_content"
                    android:textColor="@color/color_l"
                    android:textSize="@dimen/font_size_small" />

                <ImageView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ppdbq" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/ll_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@drawable/shape_select"
                    android:gravity="center"
                    android:text="@string/collect"
                    android:textColor="@color/font_color_white"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/app_brand_gsmc"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_toEndOf="@+id/tv1"
                android:hint="@string/app_brand_sr_gsmc"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/color_line" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_xl_line"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_small"
            android:text="@string/app_brand_grxx"
            android:textColor="@color/color_l"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/app_brand_gsmc"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/tv_gsmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_toEndOf="@+id/tv9"
                android:hint="@string/app_brand_sr_gsmc"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/color_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/app_brand_name"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/tv_xm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_toEndOf="@+id/tv7"
                android:hint="@string/app_brand_sr_xm"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/color_line" />
        <include layout="@layout/xl_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/app_brand_dq"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/tv_lxfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_toEndOf="@+id/tv8"
                android:hint="@string/app_brand_xz"
                android:textColor="@color/color_l"
                android:textSize="@dimen/font_size_large" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/color_line" />


    </LinearLayout>
</com.loonggg.androidframedemo.view.MyScrollview>