<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_my_line"/>

    <LinearLayout
        android:id="@+id/salesfarmrnt_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/font_color_white"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/adapter_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_xxl"
                android:text="创新引领，中联重科甘蔗收割机在广西大量上市"
                android:textSize="@dimen/d14sp"/>

            <TextView
                android:id="@+id/adapter_recommend_redCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/d11sp"
                android:textColor="@color/color_gray"
                android:text="阅读100"/>

            <TextView
                android:id="@+id/adapter_recommend_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="@color/color_gray"
                android:text="2-8"
                android:textSize="@dimen/d11sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

            <!--<TextView
                android:id="@+id/salesfragment_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="@color/gray"
                android:text="南阳"
                android:textSize="@dimen/d14sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/salesfragment_time"
                android:layout_alignBottom="@id/salesfragment_time"
                android:layout_marginRight="5dp"/>-->



        </RelativeLayout>

        <ImageView
            android:id="@+id/adapter_recommend_picture"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>



</RelativeLayout>