<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/home2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tools_water"
                android:paddingBottom="@dimen/margin_tag"
                android:paddingEnd="@dimen/margin_15"
                android:paddingTop="@dimen/margin_tag"
                android:text="@string/app_hot_brand"
                android:textColor="@color/font_color_white"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/shape_tools_water"
                android:paddingBottom="@dimen/margin_tag"
                android:paddingEnd="@dimen/margin_15"
                android:paddingTop="@dimen/margin_tag"
                android:text="@string/app_hot_brand"
                android:textColor="@color/font_color_white"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_img"
        android:layout_above="@+id/tab"
        android:layout_margin="@dimen/margin_small"
        android:text="@string/test_custom_header_desc"
        android:ellipsize="end"
        android:textColor="@color/color_xxl"
        android:textSize="@dimen/font_size_medium" />

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/sell_wz"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_2"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/wxlx"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sell_3"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_tag"
                android:drawableStart="@mipmap/sell_dh"
                android:gravity="center"
                android:text="@string/app_near_location" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>