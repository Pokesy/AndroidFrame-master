<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_shape">

    <ImageView
        android:id="@+id/layout_brandSearch_productImage"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/girle_picture"/>
    
    <TextView
        android:id="@+id/layout_brandSearch_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/d13sp"
        android:textColor="@color/color_xxl"
        android:text="产品名"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/layout_brandSearch_typeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/d11sp"
        android:textColor="@color/color_gray"
        android:text="型号名"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"/>
    
</LinearLayout>