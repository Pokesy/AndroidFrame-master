<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <TextView
        android:id="@+id/layout_partsType_vertical"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/color_read"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/layout_partsType_linear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_partsType_partsName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="@dimen/d12sp"
            android:textColor="@color/color_xxl"
            android:text="配套件的名字"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:background="@color/color_tab_bg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/font_color_white"/>

    </LinearLayout>

</LinearLayout>