<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white"
    tools:context="com.loonggg.androidframedemo.ui.activity.DealerProductDetailActivity">


    <com.loonggg.androidframedemo.view.BottomScrollView
        android:id="@+id/activity_dealerProduct_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_dealerProduct_topPrice"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@mipmap/girle_picture"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/activity_dealerProduct_productName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d16sp"
                    android:textColor="@color/color_xxl"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="EDT89763静音型破碎锤，破碎锤啊破碎锤，还是破碎锤"/>

                <LinearLayout
                    android:id="@+id/activity_dealerProduct_productShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share"
                        android:background="@color/color_tab_line"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d11sp"
                        android:textColor="@color/color_gray"
                        android:text="分享"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d12sp"
                    android:textColor="@color/color_read"
                    android:text="￥"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d15sp"
                    android:textColor="@color/color_read"
                    android:text="5763.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_dealerProduct_productSell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d11sp"
                    android:textColor="@color/color_gray"
                    android:text="已售365"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_productCollect"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d11sp"
                    android:textColor="@color/color_gray"
                    android:text="收藏263"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_productArea"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d11sp"
                    android:textColor="@color/color_gray"
                    android:text="山东烟台"/>

            </LinearLayout>

            <include layout="@layout/xl_line"/>

            <TextView
                android:id="@+id/activity_dealerProduct_productStandard"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/goback"
                android:gravity="center_vertical"
                android:text="已选规格："
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d13sp" />

            <include layout="@layout/x1_my_line" />

            <TextView
                android:id="@+id/activity_dealerProduct_productParams"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/goback"
                android:gravity="center_vertical"
                android:text="参数"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d13sp" />

            <include layout="@layout/xl_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="问大家"
                android:textColor="@color/color_xxl"
                android:textSize="@dimen/d12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/question_shape"
                    android:gravity="center"
                    android:text="问"
                    android:textColor="@color/font_color_white"
                    android:textSize="@dimen/d12sp" />

                <TextView
                    android:id="@+id/activity_questionAndAnswer_quwstionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="请问这款锤质量好不好，打击力度怎么样?"
                    android:textColor="@color/color_xxl"
                    android:textSize="@dimen/d13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/activity_dealerProduct_answerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d11sp"
                android:text="6个回答"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/answer_shape"
                    android:gravity="center"
                    android:text="答"
                    android:textColor="@color/font_color_white"
                    android:textSize="@dimen/d12sp" />

                <TextView
                    android:id="@+id/activity_dealerProduct_answerContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="请问这款锤质量好不好，打击力度怎么样?"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:gravity="center">
                
                <TextView
                    android:id="@+id/activity_dealerProduct_allAnswer"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textColor="@color/color_read"
                    android:textSize="@dimen/d12sp"
                    android:text="查看全部问答36"
                    android:gravity="center"
                    android:background="@drawable/answer_count_shape"/>
                
            </LinearLayout>

            <include layout="@layout/xl_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/activity_dealerProduct_companyImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/test_picture"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_companyName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d13sp"
                    android:textColor="@color/color_xxl"
                    android:text="烟台艾迪精密机械股份有限公司"
                    android:layout_toRightOf="@id/activity_dealerProduct_companyImage"
                    android:layout_alignTop="@id/activity_dealerProduct_companyImage"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_companyBusiness"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d11sp"
                    android:textColor="@color/color_gray"
                    android:text="主营：液压剪，破碎锤，烘干锤，振动锤"
                    android:layout_toRightOf="@id/activity_dealerProduct_companyImage"
                    android:layout_alignBottom="@id/activity_dealerProduct_companyImage"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_companyGo"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:textSize="@dimen/d12sp"
                    android:textColor="@color/color_organ"
                    android:text="进店"
                    android:gravity="center"
                    android:background="@drawable/baguette_shape"
                    android:layout_alignTop="@id/activity_dealerProduct_companyName"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <include layout="@layout/x1_my_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d11sp"
                        android:textColor="@color/color_gray"
                        android:text="全部产品"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/activity_dealerProduct_allProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d14sp"
                        android:textColor="@color/color_xxl"
                        android:text="30"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d11sp"
                        android:textColor="@color/color_gray"
                        android:text="收藏人数"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/activity_dealerProduct_collectCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d14sp"
                        android:textColor="@color/color_xxl"
                        android:text="23"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/xl_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/d13sp"
                android:textColor="@color/color_xxl"
                android:text="产品详情"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/orange_location"
                android:layout_marginLeft="15dp"/>

            <include layout="@layout/x1_my_line"/>

            <com.loonggg.androidframedemo.view.ScrollViewWithListView
                android:id="@+id/activity_dealerProduct_PictureList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:scrollbars="none"
                android:divider="@null"></com.loonggg.androidframedemo.view.ScrollViewWithListView>

            <include layout="@layout/xl_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_xxl"
                    android:textSize="@dimen/d14sp"
                    android:text="产品口碑"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/activity_dealerProduct_moreGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d12sp"
                    android:textColor="@color/color_organ"
                    android:text="更多 >"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <include layout="@layout/x1_my_line"/>

            <com.loonggg.androidframedemo.view.ScrollViewWithListView
                android:id="@+id/activity_sealerProduct_praiseList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:scrollbars="none"></com.loonggg.androidframedemo.view.ScrollViewWithListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="@dimen/d14sp"
                android:textColor="@color/color_xxl"
                android:text="相关推荐"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <include layout="@layout/x1_my_line"/>

            <com.loonggg.androidframedemo.view.MyGridView
                android:id="@+id/activity_sealerProduct_recommendGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:numColumns="2"></com.loonggg.androidframedemo.view.MyGridView>

            <include layout="@layout/xl_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="@dimen/d14sp"
                android:textColor="@color/color_xxl"
                android:text="最新评论"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <com.loonggg.androidframedemo.view.ScrollViewWithListView
                android:id="@+id/activity_sealerProduct_commentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null"></com.loonggg.androidframedemo.view.ScrollViewWithListView>

        </LinearLayout>

    </com.loonggg.androidframedemo.view.BottomScrollView>

    <RelativeLayout
        android:id="@+id/activity_dealerProduct_relativeTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/activity_dealerProduct_backTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_dealerProduct_shopTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/shop_car" />

            <ImageView
                android:id="@+id/activity_dealerProduct_settingTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/message1" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:background="@color/color_xl_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/activity_dealerProduct_talkBottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/comment" />

        <ImageView
            android:id="@+id/activity_dealerProduct_collectBottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/hide_collect" />

        <ImageView
            android:id="@+id/activity_dealerProduct_likeBottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/hide_like" />

        <TextView
            android:id="@+id/activity_dealerProduct_joinCar"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/color_organ"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/d14sp" />

        <TextView
            android:id="@+id/activity_dealerProduct_buyNow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/color_read"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/d14sp" />

    </LinearLayout>

</RelativeLayout>
