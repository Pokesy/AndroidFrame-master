<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/font_color_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/layout_typeDetail_productImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/test_picture"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/layout_typeDetail_productName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_xxl"
            android:text="公司名"/>

        <ImageView
            android:id="@+id/layout_typeDetail_renImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ren_zeng"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:background="@color/color_xl_line"/>

</LinearLayout>