<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/layout_brandSearch_storeImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/test_picture"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_brandSearch_storeName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/d13sp"
                android:textColor="@color/color_xxl"
                android:textStyle="bold"
                android:text="产品的名字"/>

            <TextView
                android:id="@+id/layout_brandSearch_storeMain"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/d11sp"
                android:textColor="@color/color_gray"
                android:text="主营：123、456、789"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/layout_brandSearch_storePin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/brand_store"/>

                <TextView
                    android:id="@+id/layout_brandSearch_storeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/d11sp"
                    android:textColor="@color/color_gray"
                    android:text="山东烟台"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

    <include layout="@layout/x1_my_line"/>

</LinearLayout>