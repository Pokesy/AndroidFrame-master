<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/d14sp"
        android:textColor="@color/color_xxl"
        android:text="支付方式"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"/>

    <RelativeLayout
        android:id="@+id/layout_submintBottomDialog_downRelative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_submintBottomDialog_downPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_gray"
            android:text="定金支付"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/layout_submitBottomDialog_downMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_read"
            android:text="￥5632.00"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layout_submintBottomDialog_downPayment"/>

        <ImageView
            android:id="@+id/layout_submitBottomDialog_downOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_ture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_submintBottomDialog_totalRelative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_submintBottomDialog_totalPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_gray"
            android:text="全款支付"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/layout_submitBottomDialog_totalOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_ture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_xl_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_submitBottomDialog_canael"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_gray"
            android:text="取消"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_xl_line"/>

        <TextView
            android:id="@+id/layout_submitBottomDialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/color_read"
            android:text="确定"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>