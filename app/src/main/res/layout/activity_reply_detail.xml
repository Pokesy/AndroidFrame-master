<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_white"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.loonggg.androidframedemo.ui.activity.ReplyDetailActivity">

    <RelativeLayout
        android:id="@+id/activity_replyDetail_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/color_top">

        <ImageView
            android:id="@+id/activity_replyDetail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d15sp"
            android:textColor="@color/color_xxl"
            android:text="回复详情"
            android:textStyle="bold"
            android:layout_toRightOf="@id/activity_replyDetail_back"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/activity_replyDetail_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/activity_replyDetail_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_xl_line"
        android:layout_below="@id/activity_replyDetail_top"/>

    <ListView
        android:id="@+id/activity_replyDetail_showList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="48dp"
        android:layout_below="@id/activity_replyDetail_view1"></ListView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColorHint="@color/color_gray"
        android:textSize="@dimen/d12sp"
        android:hint="楼主说的怎么样，点评一下..."
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edittext_shape"/>

</RelativeLayout>
