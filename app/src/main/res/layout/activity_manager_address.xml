<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loonggg.androidframedemo.ui.activity.ManagerAddressActivity">

    <LinearLayout
        android:id="@+id/activity_managerAddress_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/color_top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/activity_managerAddress_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d15sp"
            android:textColor="@color/color_xxl"
            android:text="管理地址"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:id="@+id/activity_managerAddress_showList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_managerAddress_top"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_marginBottom="48dp"/>

    <LinearLayout
        android:id="@+id/activity_managerAddress_addAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_read"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d14sp"
            android:textColor="@color/font_color_white"
            android:text="添加地址"
            android:drawableLeft="@mipmap/white_add_address"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
