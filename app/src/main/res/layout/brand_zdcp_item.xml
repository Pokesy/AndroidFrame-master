<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tag"
    android:background="@color/font_color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gv_logo_iv"
        android:layout_width="177dp"
        android:layout_height="118dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/home7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/gv_name_tv"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_vertical"
        android:text="EDT12000静音破碎锤"
        android:textColor="@color/color_xxl"
        android:textSize="@dimen/font_size_medium" />

    <LinearLayout
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDT12000"
            android:textColor="@color/color_xl"
            android:textSize="@dimen/font_size_medium" />

    </LinearLayout>

</LinearLayout>
