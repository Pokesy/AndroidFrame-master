<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="165dp"
    android:layout_gravity="center"
    android:background="@color/font_color_white"
    android:gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="165dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_az"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/az"
            android:gravity="center"
            android:text="@string/app_tool_make"
            android:paddingTop="@dimen/margin_40"
            android:textColor="@color/color_xl"
            android:textSize="@dimen/font_size_xxlarge" />


        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/margin_40"
            android:drawableTop="@mipmap/sjwx"
            android:text="@string/app_tool_service"
            android:textColor="@color/color_xl"
            android:textSize="@dimen/font_size_xxlarge" />
    </LinearLayout>

</LinearLayout>